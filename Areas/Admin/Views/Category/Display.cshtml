@model WebBanHang_Lab3.Models.Category
@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Display"; Layout = "_Layout";
}

<h1>Chi tiết danh mục</h1>

<div>
    <h4>Danh mục</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
@if (User.IsInRole("Admin"))
{
    <div class="container py-5">
        <div class="justify-content-center text-center ">
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn text-bala  btn-success" style="border-color: black;">Chỉnh sửa</a> |
                <a asp-action="Index" class="btn text-white" style="border-color: black; background-color:black">Trở về danh sách</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container py-5">
        <div class="justify-content-center text-center">
            <div>
               | <a asp-action="Index" class="btn text-white" style="border-color: black; background-color:black">Trở về danh sách</a>
            </div>
        </div>
    </div>
}

